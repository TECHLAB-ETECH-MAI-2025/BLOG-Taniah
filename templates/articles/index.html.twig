{% extends 'base.html.twig' %}

{% block title %}Articles index{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header w-100 d-flex flex-row justify-content-between align-items-center">
            <h5 class="card-title">Liste articles</h5>
            <div class="card-tool">
                <a href="{{ path('app_articles_new') }}" class="btn btn-success">Créer nouveau article</a>
            </div>
        </div>

        <div class="card-body">
            <table class="table table-striped" id="matable">
                <thead class="text-primary">
                <tr>
                    <th>Titre</th>
                    <th>Contenus</th>
                    <th>Créé le</th>
                    <th class="text-end">Actions</th>
                </tr>
                </thead>
                <tbody>
                
                </tbody>
            </table>

            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>
{% endblock %}
