{% extends 'base.html.twig' %}

{% block title %}Nouveau articles{% endblock %}

{% block body %}
<div class="container-fluid min-vh-100" style="background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);">
    <div class="container py-5">
        <!-- Header Section -->
        <div class="row justify-content-center mb-4">
            <div class="col-lg-8">
                <div class="card shadow-lg border-0" style="border-radius: 15px; backdrop-filter: blur(10px); background: rgba(255, 255, 255, 0.9);">
                    <div class="card-header text-center py-4" style="background: linear-gradient(135deg, #007bff 0%, #0056b3 100%); border-radius: 15px 15px 0 0;">
                        <h1 class="display-6 text-white mb-0 fw-bold">
                            <i class="fas fa-plus-circle me-3"></i>Création nouveau article
                        </h1>
                    </div>
                    
                    <!-- Navigation Button -->
                    <div class="card-body p-4">
                        <div class="text-center mb-4">
                            <a href="{{ path('app_articles_index') }}" class="btn btn-outline-primary btn-lg px-4 py-2" 
                               style="border-radius: 25px; transition: all 0.3s ease; border: 2px solid #007bff;">
                                <i class="fas fa-list me-2"></i>Voir la liste
                            </a>
                        </div>
                        
                        <!-- Form Container -->
                        <div class="form-container" style="background: rgba(248, 249, 250, 0.6); border-radius: 12px; padding: 2rem; border: 1px solid rgba(0, 123, 255, 0.1);">
                            {{ include('articles/_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Animation pour le bouton */
    .btn-outline-primary:hover {
        background: linear-gradient(135deg, #007bff 0%, #0056b3 100%) !important;
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0, 123, 255, 0.3);
        border-color: #007bff !important;
        color: white !important;
    }
    
    /* Style pour le conteneur principal */
    .card {
        transition: all 0.3s ease;
    }
    
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1) !important;
    }
    
    /* Style pour les éléments du formulaire (à adapter selon votre formulaire) */
    .form-container .form-control {
        border-radius: 8px;
        border: 2px solid rgba(0, 123, 255, 0.1);
        transition: all 0.3s ease;
    }
    
    .form-container .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    }
    
    .form-container .btn-primary {
        background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
        border: none;
        border-radius: 25px;
        padding: 12px 30px;
        transition: all 0.3s ease;
    }
    
    .form-container .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0, 123, 255, 0.3);
    }
    
    /* Responsive */
    @media (max-width: 768px) {
        .container {
            padding: 1rem;
        }
        
        .card-header h1 {
            font-size: 1.5rem;
        }
        
        .btn-lg {
            font-size: 1rem;
            padding: 0.75rem 1.5rem;
        }
    }
</style>
{% endblock %}