{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
    <div class="container">
            <h4>Categories</h4>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ category.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ category.description }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ category.createdAt ? category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <div class="container mb-3">
        <a href="{{ path('app_categories_index') }}" class="btn btn-primary">Voir la liste</a>

    <a href="{{ path('app_categories_edit', {'id': category.id}) }}" class="btn btn-success">Modifier</a>

    </div>
    
    {{ include('categories/_delete_form.html.twig') }}
    </div>

{% endblock %}
