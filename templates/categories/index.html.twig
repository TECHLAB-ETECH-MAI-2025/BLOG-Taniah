{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
    <div class="card">
    <div class="card-header w-100 d-flex flex-row justify-content-between align-items-center">
            <h5 class="card-title">Catégories</h5>
            <div class="card-tool">
    <a href="{{ path('app_categories_new') }}" class="btn btn-success">Créer une catégorie</a>
    </div>
    </div>

    <div class="card-body">
    <table class="table">
        <thead class="text-primary">
            <tr>
                <th>Titre</th>
                <th>Descriptions</th>
                <th>Créé le</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.titre }}</td>
                <td>{{ category.description }}</td>
                <td>{{ category.createdAt ? category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_categories_show', {'id': category.id}) }}" class="btn btn-primary">Voir</a>
                    <a href="{{ path('app_categories_edit', {'id': category.id}) }}" class="btn btn-success">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">aucune catégorie</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    </div>

{% endblock %}
